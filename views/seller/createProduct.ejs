<%- include("./partialsSeller/sidebar") %>
<div class="content-wrapper">
    <div class="content-header">
        <h1>Dashboard</h1>
        <ul class="content-header__breadcrumb">
            <li>Home</li>
            <li>Dashboard</li>
        </ul>
    </div>
    <div class="shop-info box-info">
        <div class="col-12">
            <a href="/sellerPage">Quay lại</a>
            <div class="col-lg-8">
                <form action="/sellerPage/crud-page/createProduct" enctype="multipart/form-data" method="POST">
                    <div class="input-group">
                        <div class="col-12">
                            <label for="productname" class="form-label">Tên Shop</label>
                            <input type="text" name="productname" id="productname" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="category">Danh mục</label>
                            <select class="form-select form-control" name="category" aria-label="Category">
                                <option selected>Chọn danh mục</option>
                                <% categories.forEach(cate =>{ %>
                                <option value="<%- cate.id %>"><%- cate.name %> </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="slug" class="form-label">Slug</label>
                            <input type="text" name="slug" id="slug" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="price" id="price" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label">Mô tả</label>
                            <textarea type="text" name="description" id="description" class="form-control"></textarea>
                        </div>
                        <div class="col-12">
                            <label for="thumbnail" class="form-label">Thumbnail</label>
                            <input type="file" name="image" id="image" class="form-control" accept="image/*">
                        </div>
                        <div class="col-12">
                            <label for="images" class="form-label">Images</label>
                            <input type="file" class="form-control" multiple name="images" accept="image/*">
                        </div>
                    </div>
                    <button class="btn btn-dark" id="button-addon2" type="submit">Thêm mới</button>
                </form>
            </div>
        </div>
    </div>
</div>