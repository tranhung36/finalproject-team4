<div class="container mb-4">
    <div class="row">
        <!-- Wishlist-->
        <div class="col-lg-12 pb-5">
            <!-- Item-->
            <% if (myWishList.length) { %>

            <% myWishList.forEach(wish => { %>
            <div class="cart-item d-flex justify-content-between mt-5">
                <span class="remove-item"><a href="/user/remove-product-from-wish/<%= wish.product.slug %>"><i
                            class="fa fa-times"></i></a></span>
                <div class="px-3 my-3">
                    <a class="cart-item-product" href="/products/<%= wish.product.slug %>">
                        <div class="cart-item-product-thumb"><img src="/images/<%= wish.product.thumbnail %>"
                                alt="Product"></div>
                        <div class="cart-item-product-info">
                            <h4 class="cart-item-product-title"><%= wish.product.name %></h4>
                            <div class="text-lg text-body font-weight-medium pb-1">$<%= wish.product.price %></div>
                            <span>Category:
                                <span
                                    class="text-success font-weight-medium"><%= wish.product.categoryId.name %></span></span>
                        </div>
                    </a>
                </div>
            </div>
            <% }) %>
            <% } else { %>
            <div class="container my-3 px-3 bg-white">
                <p>Chưa có sản phẩm yêu thích</p>
            </div>
            <% } %>
        </div>
    </div>
</div>