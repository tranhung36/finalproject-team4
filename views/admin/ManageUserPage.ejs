<%- include("./partialsAdmin/sidebar") %>
<div class="container col-xl-10 crud-page">
    
    <div class="table-control">
        <a href="/admin/manageUsers/createUser" class="btn btn-primary mb-2" style="float: right">Add new user</a>
        <table class="table table-striped table-hover table-bordered paginated">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Gmail</th>
                </tr>
            </thead>
            <% userInfo.forEach((user,index)=> {%>
                <tbody>
                    <tr>
                        <td><%= index + 1 %></th>
                        <td><%= user.email %></td>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        
                        <td>
                        <a class="btn btn-primary" href="/admin/manageUsers/updateUser/<%- user._id %>">Update</a>
                        <a class="btn btn-info " href="/admin/manageUsers/deleteUser/<%- user._id %>">Delete</a>
                        </td>
                    </tr>
                </tbody>
                <% }) %>
        </table>
    </div>
</div>
