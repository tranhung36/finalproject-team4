<%- include("./partialsAdmin/sidebar") %>
<div class="content-wrapper">
    <div class="content-header">
        <h1>Add new user</h1>
        <ul class="content-header__breadcrumb">
            <li>Home</li>
            <li>Dashboard</li>
        </ul>
    </div>
    <div class="shop-info box-info">
        <div class="col-12">
            <a href="/admin">Back</a>
            <div class="col-lg-8">
                <form action="/admin/manageUsers/createUser" enctype="multipart/form-data" method="POST">
                    <div class="input-group">
                        <div class="col-12">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="firstname" class="form-label">First name</label>
                            <input type="text" name="firstname" id="firstname" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="lastname">Last name</label>
                            <input type="text" name="lastname" id="lastname" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="role">Role</label>
                                <select class="form-select form-control" name="role" aria-label="role" required>
                                    <option value="" >Choose role</option>
                                    <option value="Seller">Seller </option>
                                    <option value="User">User </option>      
                            </select>
                        </div>

                    </div>
                    <button class="btn btn-dark" id="button-addon2" type="submit">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
